<%- include('layout', { content: `
    <h2 class="text-2xl font-bold mb-4">Blog Posts</h2>
    ${posts.length === 0 ? `
        <p class="text-gray-600">No posts yet. <a href="/new" class="text-blue-500 hover:underline">Create a new post</a>.</p>
    ` : `
        <ul class="space-y-6">
            ${posts.map(post => `
                <li class="bg-white shadow rounded-lg p-6">
                    <h3 class="text-xl font-semibold mb-2">${post.title}</h3>
                    <p class="text-gray-600 text-sm mb-2">Created on ${post.createdAt.toLocaleString()}</p>
                    <p class="text-gray-700 mb-4">${post.content}</p>
                    <div class="flex space-x-2">
                        <a href="/edit/${post.id}" class="text-blue-500 hover:underline">Edit</a>
                        <a href="/delete/${post.id}" class="text-red-500 hover:underline">Delete</a>
                    </div>
                </li>
            `).join('')}
        </ul>
    `}
` }) %>